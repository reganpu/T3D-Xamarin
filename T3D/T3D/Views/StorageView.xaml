<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="T3D.StorageView">

	<ContentView.Resources>
		<ResourceDictionary>
			<Color x:Key="dashedLineColor">#b7b7b7</Color>
			<Color x:Key="webAddressColor">#b7b7b7</Color>
		</ResourceDictionary>
	</ContentView.Resources>


	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="137*"/>
			<RowDefinition Height="1300*"/>
			<RowDefinition Height="185*"/>
		</Grid.RowDefinitions>

		<AbsoluteLayout Grid.Row="0" HorizontalOptions="Center">

			<StackLayout HorizontalOptions="Center"
						 Padding="0, 16, 0, 0">
				<Image Source="bg_view_switch"
					   WidthRequest="151"
					   HeightRequest="21"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal"
						 HorizontalOptions="Center"
						 Padding="0, 16, 0, 0"
						 Spacing="0"
						 IsVisible="false">
				<Button Image="view1"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
				<Button Image="view2_unclick"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
				<Button Image="view3_unclick"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
			</StackLayout>
			
			<StackLayout Orientation="Horizontal"
						 HorizontalOptions="Center"
						 Padding="0, 16, 0, 0"
						 Spacing="0">
				<Button Image="view1_unclick"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
				<Button Image="view2"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
				<Button Image="view3_unclick"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal"
						 HorizontalOptions="Center"
						 Padding="0, 16, 0, 0"
						 Spacing="0"
						 IsVisible="false">
				<Button Image="view1_unclick"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
				<Button Image="view2_unclick"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
				<Button Image="view3"
						WidthRequest="50"
						HeightRequest="21"
						BorderWidth="0"/>
			</StackLayout>

		</AbsoluteLayout>

		<ScrollView Grid.Row="1" Padding="0, 16, 0, 0">
			<!-- HasUnevenRows="true" -->
			<ListView x:Name="listView"  Margin="18.75,0, 18.75,0" RowHeight="100"
					  ItemSelected="Handle_ItemSelected">
				
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>

							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="100*"/>
									<ColumnDefinition Width="219*"/>
								</Grid.ColumnDefinitions>

								<Image Grid.Column="0" Source="{Binding ModelImageSource}" Margin="5" Aspect="Fill"/>

								<Grid Padding="9,0,0,0" Grid.Column="1">
									<Grid.RowDefinitions>
										<RowDefinition Height="20*"/>
										<RowDefinition Height="31*"/>
										<RowDefinition Height="18*"/>
										<RowDefinition Height="18*"/>
										<RowDefinition Height="4"/>
										<RowDefinition Height="13*"/>
									</Grid.RowDefinitions>

									<Label Grid.Row="1" Text="{Binding Name}" TextColor="#94d4d4" Font="17"
										   VerticalTextAlignment="End" HorizontalTextAlignment="Start"/>
									<Label Grid.Row="3" Text="{Binding Notes}" TextColor="Gray" Font="15"
										   Margin="0,7,0,0"/>
									<Image Grid.Row="4" Source="dashed_line.png" Aspect="Fill"/>
									<Button Grid.Row="5" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,4,0"  
											Image="btn_uncheck.png" WidthRequest="10" HeightRequest="10"/>
									<Label Grid.Row="5" Text="http://www.thingiverse.com" FontSize="6" TextColor="#bfbfbf"
										   Margin="0,0,5,2" HorizontalTextAlignment="End"/>
								</Grid>

							</Grid>
							
							<!--StackLayout Orientation="Horizontal">
								
								<Image Source="{Binding ModelImageSource}" HorizontalOptions="Start" WidthRequest="90"/>

								<StackLayout Orientation="Vertical" Margin="10, 20, 0, 0">
									<Label Text="{Binding Name}" TextColor="#94d4d4" Font="20"/>
									<Label Text="{Binding Notes}" TextColor="Gray" Font="16"/>
								</StackLayout>

							</StackLayout-->

							<!--StackLayout Orientation="Horizontal">
								
								<Image Source="{Binding ImageFilePath}" HorizontalOptions="Start" WidthRequest="90"/>

								<StackLayout Orientation="Vertical" Margin="10, 20, 0, 0" HorizontalOptions="FillAndExpand">
									<Label Text="{Binding Name}" TextColor="#94d4d4" Font="17"/>
									<Label Text="{Binding Notes}" TextColor="Gray" Font="15"/>
									<ProgressBar Progress="{Binding Progress}"/>
								</StackLayout>

							</StackLayout-->
							
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</ScrollView>
		
		<Button Grid.Row="2" Image="btn_delete.png" 
				VerticalOptions="Center"
				HeightRequest="33"
				Clicked="Handle_Clicked"/>
	</Grid>
	
</ContentView>
