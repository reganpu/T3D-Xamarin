<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="T3D.ParameterSettingPage"
			 Title="Print">
	
	<Grid RowSpacing="0">

		<Grid.RowDefinitions >
			<RowDefinition Height="279*"/>
			<RowDefinition Height="324*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="54"/>
				<RowDefinition Height="9"/>
			</Grid.RowDefinitions>
			
			<Image Grid.Row="0" x:Name="image"
		   		   HeightRequest="216" WidthRequest="375" 
		   	 	   Aspect="Fill" 
		   		   HorizontalOptions="Fill" 
		   		   VerticalOptions="Fill"
		   		   />

			<Grid Grid.Row="1" BackgroundColor="#48bbb7" HeightRequest="54">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0" x:Name="btnLight" Image="icon_light" HeightRequest="38" WidthRequest="31" Clicked="btnLight_Clicked"/>
				<Button Grid.Column="1" x:Name="btnDark" Image="icon_dark_unclick" HeightRequest="38" WidthRequest="31" Clicked="btnDark_Clicked"/>
				<Button Grid.Column="2" x:Name="btnQuantity" Image="icon_quantity_unclick" HeightRequest="38" WidthRequest="31" Clicked="btnQuantity_Clicked"/>
				<Button Grid.Column="3" x:Name="btnSize" Image="icon_size_unclick" HeightRequest="38" WidthRequest="31" Clicked="btnSize_Clicked"/>

			</Grid>
			
			<Grid Grid.Row="2" HeightRequest="9">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Image Grid.Column="0" x:Name="imgLight" Source="triangle.png" IsVisible="true" />
				<Image Grid.Column="1" x:Name="imgDark" Source="triangle.png" IsVisible="false"/>
				<Image Grid.Column="2" x:Name="imgQuantity" Source="triangle.png" IsVisible="false"/>	
				<Image Grid.Column="3" x:Name="imgSize" Source="triangle.png" IsVisible="false"/>
			</Grid>
			
		</Grid>
	
		<Image Grid.Row="1" Source="Bg_adjust.png"/>

		<Grid Grid.Row="1" RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="238*"/>
				<RowDefinition Height="95*"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" RowSpacing="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="34"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Label Grid.Row="0" x:Name="lblLight" Text="Light Interval" Margin="18,0,0,0"
					   FontSize="17" TextColor="#16294f" IsVisible="true"/>
				<Label Grid.Row="0" x:Name="lblDark" Text="Dark Interval" Margin="18,0,0,0"
					   FontSize="17" TextColor="#16294f" IsVisible="false"/>
				<Label Grid.Row="0" x:Name="lblSize" Text="Slice Size" Margin="18,0,0,0"
					   FontSize="17" TextColor="#16294f" IsVisible="false"/>
				<Label Grid.Row="0" x:Name="lblQuantity" Text="Quantity" Margin="18,0,0,0"
					   FontSize="17" TextColor="#16294f" IsVisible="false"/>


				<Grid Grid.Row="1" x:Name="gdLight" ColumnSpacing="0" IsVisible="true">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="103*"/>
						<ColumnDefinition Width="169*"/>
						<ColumnDefinition Width="103*"/>
					</Grid.ColumnDefinitions>

					<Grid Grid.Column="1">
						<Image Source="Bg_adjust_circle.png"/>

						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>

							<Label Grid.Row="0" x:Name="lblLightSec" Text="1" FontAttributes="Bold" FontSize="32" VerticalTextAlignment="End" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="1" Text="sec" FontSize="22" HorizontalTextAlignment="Center"/>
							
						</Grid>
					</Grid>

					<Grid Grid.Column="2">
						<Grid.RowDefinitions>
							<RowDefinition Height="68*"/>
							<RowDefinition Height="54*"/>
							<RowDefinition Height="38*"/>
							<RowDefinition Height="31*"/>
						</Grid.RowDefinitions>

						<Grid Grid.Row="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="22*"/>
								<ColumnDefinition Width="82*"/>
								<ColumnDefinition Width="25*"/>
							</Grid.ColumnDefinitions>

							<Button Grid.Column="1" Image="icon_add.png" Clicked="btnLightSecIncrease_Clicked"/>
						</Grid>

						<Grid Grid.Row="2">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="38*"/>
								<ColumnDefinition Width="65*"/>
							</Grid.ColumnDefinitions>

							<Button Grid.Column="0" Image="icon_reduce.png" Clicked="btnLightSecDecrease_Clicked"/>
						</Grid>		
					</Grid>
					
				</Grid>

				<Grid Grid.Row="1" x:Name="gdDark" ColumnSpacing="0" IsVisible="false">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="103*"/>
						<ColumnDefinition Width="169*"/>
						<ColumnDefinition Width="103*"/>
					</Grid.ColumnDefinitions>

					<Grid Grid.Column="1">
						<Image Source="Bg_adjust_circle.png"/>

						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>

							<Label Grid.Row="0" x:Name="lblDarkSec" Text="1" FontAttributes="Bold" FontSize="32" VerticalTextAlignment="End" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="1" Text="sec" FontSize="22" HorizontalTextAlignment="Center"/>
							
						</Grid>
					</Grid>

					<Grid Grid.Column="2">
						<Grid.RowDefinitions>
							<RowDefinition Height="68*"/>
							<RowDefinition Height="54*"/>
							<RowDefinition Height="38*"/>
							<RowDefinition Height="31*"/>
						</Grid.RowDefinitions>

						<Grid Grid.Row="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="22*"/>
								<ColumnDefinition Width="82*"/>
								<ColumnDefinition Width="25*"/>
							</Grid.ColumnDefinitions>

							<Button Grid.Column="1" Image="icon_add.png" Clicked="btnDarkSecIncrease_Clicked"/>
						</Grid>

						<Grid Grid.Row="2">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="38*"/>
								<ColumnDefinition Width="65*"/>
							</Grid.ColumnDefinitions>

							<Button Grid.Column="0" Image="icon_reduce.png" Clicked="btnDarkSecDecrease_Clicked"/>
						</Grid>		
					</Grid>
					
				</Grid>
				
				<Grid Grid.Row="1" x:Name="gdQuantity" ColumnSpacing="0" IsVisible="false">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="103*"/>
						<ColumnDefinition Width="169*"/>
						<ColumnDefinition Width="103*"/>
					</Grid.ColumnDefinitions>

					<Grid Grid.Column="1">
						<Image Source="Bg_adjust_circle.png"/>

						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>

							<Label Grid.Row="0" x:Name="lblSelectedQuantity" Text="1" FontAttributes="Bold" FontSize="32" VerticalTextAlignment="End" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="1" Text="models" FontSize="22" HorizontalTextAlignment="Center"/>
							
						</Grid>
					</Grid>

					<Grid Grid.Column="2">
						<Grid.RowDefinitions>
							<RowDefinition Height="68*"/>
							<RowDefinition Height="54*"/>
							<RowDefinition Height="38*"/>
							<RowDefinition Height="31*"/>
						</Grid.RowDefinitions>

						<Grid Grid.Row="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="22*"/>
								<ColumnDefinition Width="82*"/>
								<ColumnDefinition Width="25*"/>
							</Grid.ColumnDefinitions>

							<Button Grid.Column="1" Image="icon_add.png" Clicked="btnQuantityIncrease_Clicked"/>
						</Grid>

						<Grid Grid.Row="2">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="38*"/>
								<ColumnDefinition Width="65*"/>
							</Grid.ColumnDefinitions>

							<Button Grid.Column="0" Image="icon_reduce.png" Clicked="btnQuantityDecrease_Clicked"/>
						</Grid>		
					</Grid>
				</Grid>

				
				<Grid Grid.Row="1" x:Name="gdSize" ColumnSpacing="0" IsVisible="false">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200*"/>
						<ColumnDefinition Width="60*"/>
					</Grid.ColumnDefinitions>

					<Slider Grid.Column="0" x:Name="slider" Margin="18,0,3,0"
							Minimum="0" Maximum="100" Value="100"/>

					<Grid ColumnSpacing="0" Grid.Column="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="1.3*"/>
							<ColumnDefinition Width="1*"/>
						</Grid.ColumnDefinitions>

						<Label Grid.Column="0" x:Name="lblSelectedSize"
							   Text="{Binding Source={x:Reference Name=slider}, Path=Value, StringFormat='{0:F0}'}" 
							   VerticalTextAlignment="Center" HorizontalTextAlignment="End"
							   FontSize="24" TextColor="#455472"/>
						<Label Grid.Column="1" Text="%" VerticalTextAlignment="Center"
							   FontSize="24" TextColor="#455472"/>
					</Grid>
				</Grid>
			</Grid>
			
			<Button Grid.Row="1" Image="Btn_ready.png" 
					Clicked="Handle_Clicked"/>
		</Grid>



		
		<!--AbsoluteLayout>
			<Image Source="Bg_adjust.png"/-->


			
