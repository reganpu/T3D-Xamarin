<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="T3D.ParameterSettingPage"
			 Title="Print">
	
	<Grid RowSpacing="0">

		<Grid.RowDefinitions >
			<RowDefinition Height="279*"/>
			<RowDefinition Height="324*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="54"/>
				<RowDefinition Height="9"/>
			</Grid.RowDefinitions>
			
			<Image Grid.Row="0" x:Name="image"
		   		   HeightRequest="216" WidthRequest="375" 
		   	 	   Aspect="Fill" 
		   		   HorizontalOptions="Fill" 
		   		   VerticalOptions="Fill"
		   		   />

			<Grid Grid.Row="1" BackgroundColor="#48bbb7" HeightRequest="54">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0" Image="icon_light_unclick" HeightRequest="38" WidthRequest="31"/>
				<Button Grid.Column="1" Image="icon_dark_unclick" HeightRequest="38" WidthRequest="31"/>
				<Button Grid.Column="2" Image="icon_size" HeightRequest="38" WidthRequest="31"/>
				<Button Grid.Column="3" Image="icon_quantity_unclick" HeightRequest="38" WidthRequest="31"/>
			</Grid>
			
			<Grid Grid.Row="2" HeightRequest="9">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Image Grid.Column="0" Source="triangle.png" IsVisible="false"/>
				<Image Grid.Column="1" Source="triangle.png" IsVisible="false"/>
				<Image Grid.Column="2" Source="triangle.png" IsVisible="true"/>
				<Image Grid.Column="3" Source="triangle.png" IsVisible="false"/>	
			</Grid>
			
		</Grid>
	
		<Image Grid.Row="1" Source="Bg_adjust.png"/>

		<Grid Grid.Row="1" RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="238*"/>
				<RowDefinition Height="95*"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" RowSpacing="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="34"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Label Grid.Row="0" Text="Slice Size" Margin="18,0,0,0"
					   FontSize="17" TextColor="#16294f"/>

				
				<Grid ColumnSpacing="0" Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200*"/>
						<ColumnDefinition Width="60*"/>
					</Grid.ColumnDefinitions>

					<Slider Grid.Column="0" x:Name="slider" Margin="18,0,3,0"
							Minimum="0" Maximum="100" Value="100"/>

					<Grid ColumnSpacing="0" Grid.Column="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="1.3*"/>
							<ColumnDefinition Width="1*"/>
						</Grid.ColumnDefinitions>

						<Label Grid.Column="0" Text="{Binding Source={x:Reference Name=slider}, Path=Value, StringFormat='{0:F0}'}" 
							   VerticalTextAlignment="Center" HorizontalTextAlignment="End"
							   FontSize="24" TextColor="#455472"/>
						<Label Grid.Column="1" Text="%" VerticalTextAlignment="Center"
							   FontSize="24" TextColor="#455472"/>
					</Grid>
				</Grid>
			</Grid>
			
			<Button Grid.Row="1" Image="Btn_ready.png" 
					Clicked="Handle_Clicked"/>
		</Grid>



		
