<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="T3D.ParameterSettingPage"
			 Title="Print">
	<StackLayout Spacing="0">

		<Image x:Name="image"
			   HeightRequest="216" WidthRequest="375" 
			   Aspect="Fill" 
			   HorizontalOptions="Fill" 
			   VerticalOptions="Fill"
			   />

		<Grid BackgroundColor="#48bbb7" HeightRequest="54">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0" Image="icon_light_unclick" HeightRequest="38" WidthRequest="31"/>
			<Button Grid.Column="1" Image="icon_dark_unclick" HeightRequest="38" WidthRequest="31"/>
			<Button Grid.Column="2" Image="icon_size" HeightRequest="38" WidthRequest="31"/>
			<Button Grid.Column="3" Image="icon_quantity_unclick" HeightRequest="38" WidthRequest="31"/>
		</Grid>

		<Grid HeightRequest="9">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Image Grid.Column="0" Source="triangle.png" IsVisible="false"/>
			<Image Grid.Column="1" Source="triangle.png" IsVisible="false"/>
			<Image Grid.Column="2" Source="triangle.png" IsVisible="true"/>
			<Image Grid.Column="3" Source="triangle.png" IsVisible="false"/>	
		</Grid>
		<AbsoluteLayout >
			<Image Source="Bg_adjust.png"/>

			<StackLayout Spacing="0">
				<Label Text="Slice Size" Margin="18, 14, 0, 0" FontSize="17" TextColor="#16294f"/>

				<StackLayout Spacing="0" Orientation="Horizontal" Margin="27,67,23,0" HeightRequest="28">
					<Slider x:Name="slider" WidthRequest="265"
							Minimum="0" Maximum="100" Value="100"/>
					<Label Margin="11, 0, 0, 0" WidthRequest="42" HorizontalTextAlignment="End"
						   FontSize="24" TextColor="#455472"
						   Text="{Binding Source={x:Reference Name=slider}, Path=Value}" />
					<Label HeightRequest="28" Text="%" 
						   FontSize="24" TextColor="#455472"/>
				</StackLayout>

				<Button Image="Btn_ready.png" Margin="59,125,59,0" Clicked="Handle_Clicked"/>
			</StackLayout>


		</AbsoluteLayout>


		
	</StackLayout>
</ContentPage>
