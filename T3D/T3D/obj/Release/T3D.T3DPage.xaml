<?xml version="1.0" encoding="utf-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 	  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 	  xmlns:local="clr-namespace:T3D" 
			 	  x:Class="T3D.T3DPage">

	<MasterDetailPage.Resources>
		<ResourceDictionary>
			<Color x:Key="lightBlue">#5F6160</Color>
			<OnPlatform x:Key="backgroundColor"
				x:TypeArguments="Color"
				iOS="#4cbbb4"
				Android="#4cbbb4"/>
		</ResourceDictionary>
	</MasterDetailPage.Resources>
	
	<MasterDetailPage.Master>
		<local:MasterPage/>
	</MasterDetailPage.Master>

	<MasterDetailPage.Detail>
		<NavigationPage BarBackgroundColor="{StaticResource backgroundColor}"
						BarTextColor="White">
			<x:Arguments>
				<local:DetailPage/>
			</x:Arguments>
		</NavigationPage>
	</MasterDetailPage.Detail>

	<MasterDetailPage.ToolbarItems>
		<ToolbarItem Name="Upload">
			<ToolbarItem.Icon>
				<OnPlatform x:TypeArguments="FileImageSource"
							iOS="btn_upload.png"
							Android="btn_upload.png"/>
			</ToolbarItem.Icon>
		</ToolbarItem>
	</MasterDetailPage.ToolbarItems>
	
</MasterDetailPage>
