<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="T3D.MasterPage"
			 Title="Master Page"
			 Padding="10"
	  	 	 x:Name="masterPage">

	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
				    iOS="0, 20, 0, 0"/>
	</ContentPage.Padding>
	
	<ContentPage.Icon>
		<OnPlatform x:TypeArguments="FileImageSource"
				    iOS="btn_menu.png"
					Android="btn_menu.png"/>
	</ContentPage.Icon> 

	<Frame OutlineColor="Accent" BackgroundColor="#f0f0f0">
		<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="268*"/>
			<RowDefinition Height="1652*"/>
		</Grid.RowDefinitions>

		<StackLayout Grid.Row="0" Orientation="Horizontal">
			<BoxView Color="#5ac1be"/>
			<Label Text="Model Categories" TextColor="#5ac1be" VerticalTextAlignment="End" FontSize="22"/>
		</StackLayout>

		<StackLayout Grid.Row="1" Margin="20">
			<Label Text="All" TextColor="#49bbb8" FontSize="22"/>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_animals" HeightRequest="32"/>
				<Label Text="Animals" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_characters" HeightRequest="32"/>
				<Label Text="Characters" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_transports" HeightRequest="32"/>
				<Label Text="Transports" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_toys" HeightRequest="32"/>
				<Label Text="Toys" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_tools" HeightRequest="32"/>
				<Label Text="Tools" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_food" HeightRequest="32"/>
				<Label Text="Food" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_architecture" HeightRequest="32"/>
				<Label Text="Architectures" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Image Source="Categories/icon_other" HeightRequest="32"/>
				<Label Text="Others" TextColor="#7d7d7d" 
					   VerticalTextAlignment="Center" HeightRequest="42.75" FontSize="17"
					   Margin="4"/>
			</StackLayout>
			
		</StackLayout>
		
	</Grid>
	</Frame>

	
	<!--Frame OutlineColor="Accent">
		<StackLayout Orientation="Horizontal"
					 HorizontalOptions="Center"
					 VerticalOptions="Center">
			<Label Text="{Binding Source={x:Reference masterPage},
								  Path=Width,
								  StringFormat='Master: {0:F0}'}"/>
			<Label Text="{Binding Source={x:Reference masterPage},
								  Path=Height,
								  StringFormat='&#x00D7; {0:F0}'}"/>
		</StackLayout>
	</Frame-->
	
</ContentPage>
